[Unit]
Description=poa netstats agent service
After=network.target
[Service]
User=root
Group=root
WorkingDirectory={{ home }}/poa_agent
Restart=on-failure
RestartSec=5
ExecStartPre=/usr/local/bin/mix local.hex --force
ExecStart={{ home }}/poa_agent/bin/poa_agent start
Type=simple
[Install]
WantedBy=multi-user.target
